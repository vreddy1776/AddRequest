<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.addrequest">

    <!-- Network Access -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Read and Write Files -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <!-- App -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- The manifest entry for the MainActivity -->
        <activity
            android:name=".MVVM.Main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name="com.example.android.addrequest.MVVM.Login.LoginActivity"
            android:label="@string/login_activity_name" />

        <!-- TicketListActivity -->
        <activity
            android:name="com.example.android.addrequest.MVVM.TicketList.TicketListActivity"
            android:label="@string/ticket_list_activity_name" />

        <!-- AddTicketActivity -->
        <activity
            android:name=".MVVM.AddTicket.AddTicketActivity"
            android:label="@string/add_ticket_activity_name" />

        <!-- ProfileActivity -->
        <activity
            android:name=".MVVM.Profile.ProfileActivity"
            android:label="@string/profile_activity_name" />

        <!-- VideoActivity -->
        <activity
            android:name="com.example.android.addrequest.MVVM.VideoPlayer.VideoPlayerActivity" />

        <!-- AWS S3 bucket access permission -->
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

    </application>

</manifest>