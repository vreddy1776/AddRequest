<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- EditText for title input -->
    <EditText
        android:id="@+id/editTextTicketTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="@string/edit_ticket_title"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        style="@style/TextInputStyle"/>

    <!-- EditText for description input -->
    <EditText
        android:id="@+id/editTextTicketDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
        android:hint="@string/edit_ticket_description"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        style="@style/TextInputStyle" />


    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/stream_video"
        android:layout_width="match_parent"
        android:layout_height="180dp" />


    <!-- Add button -->
    <Button
        android:id="@+id/saveButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="@string/add_button"
        android:textColor="@android:color/primary_text_dark" />

    <Button
        android:id="@+id/videoButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="@string/video_button"
        android:textColor="@android:color/primary_text_dark" />



    <ImageButton
        android:id="@+id/chatButton"
        android:layout_gravity="end"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/nav_chat"
        android:onClick="goToChat"/>


</LinearLayout>